<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
  "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <package name="main" extends="struts-default">
  	<action name="welcome">
  	<result>
  		/views/welcome.jsp
  	</result>
  	</action>
  	<action name="form">
  	<result>
  		/views/login.jsp
  	</result>
  	</action>
    <action name="login" class="com.techlabs.action.LoginAction">
			<result name="success" type="redirect">welcome</result>
			<result name="error">/views/login.jsp</result>
		</action>
		<action name="loadCaptcha" class="com.techlabs.action.CaptchaAction">
		</action>
    
  </package>
</struts>
